<%- model_class = Laboratory -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @laboratory.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:aforo) %>:</strong></dt>
  <dd><%= @laboratory.aforo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @laboratory.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:employe_id) %>:</strong></dt>
  <dd><%= @laboratory.employe_id %></dd>
</dl>
<%= link_to t('.back', :default => t("helpers.links.back")),
              laboratories_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_laboratory_path(@laboratory), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              laboratory_path(@laboratory),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
<br>

<table class=container-fluid">
  <thead>
    <tr>
      <th><%= Computer.human_attribute_name(:picture) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <div class="row">
      <% @laboratory.computers.each do |computer| %>
      <div class=".col-md-4"><%= image_tag computer.picture.url(:thumb) %></div>
      <div><%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        computer_path(computer),
                        :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                        :class => 'btn btn-xs btn-danger' %></div>
    

        </tr>
      <% end %>   
    </div>
  </tbody>
</table>
