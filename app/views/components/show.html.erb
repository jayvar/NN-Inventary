<%- model_class = Component -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @component.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @component.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:computer_id) %>:</strong></dt>
  <dd><%= @component.computer_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:component_type) %>:</strong></dt>
  <dd><%= @component.component_type %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              components_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_component_path(@component), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              component_path(@component),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
