<%= simple_form_for @employe, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@employe[:name]) %>
  <%= f.input :description %>
  <%= error_span(@employe[:description]) %>
  <%= f.association :user%>
  <%= error_span(@employe[:user]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                employes_path, :class => 'btn btn-default' %>
<% end %>
