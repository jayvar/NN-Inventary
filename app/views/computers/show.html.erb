<%- model_class = Computer -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @computer.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:serie) %>:</strong></dt>
  <dd><%= @computer.serie %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @computer.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:laboratory) %>:</strong></dt>
  <dd><%= link_to @computer.laboratory.name, @computer.laboratory %></dd>
  <dt><strong><%= model_class.human_attribute_name(:picture) %>:</strong></dt>
  <dd><%= image_tag @computer.picture.url(:medium) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tags) %>:</strong></dt>
  <dd>
    <% @computer.tag_list.each do |tag| %>
      <%= link_to tag, tag_path(tag) %>
    <% end %>  
  </dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              computers_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_computer_path(@computer), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              computer_path(@computer),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
